<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:parentTag="android.widget.LinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="4dp"
>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:id="@+id/text"
              android:textColor="@color/searchTitleTextColor"
              app:layout_constraintTop_toBottomOf="@+id/mImage"
              android:text="@string/app_name"
              android:lines="1"
              android:padding="4dp"
              android:gravity="center_vertical"
              android:ellipsize="end"
              android:textSize="16sp"
              />
    <ImageView
            android:id="@+id/mImage"
            android:padding="6dp"
            android:layout_width="32dp"
            android:background="@drawable/trans_back"
            android:layout_height="32dp"
            android:tint="@color/searchTitleTextColor"
            android:src="@drawable/ic_delete"
    />
    <ImageView
            android:id="@+id/mImage2"
            android:padding="6dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/trans_back"
            android:tint="@color/searchTitleTextColor"
            android:src="@drawable/ic_insert_text"
    />

</merge>